<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="com.pts4.healthapp.Home"
    android:background="@color/backgroundDark"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true">

        <Button
            style="@style/menuButton"
            android:text="@string/foodDiary"
            android:id="@+id/diaryButton"/>

        <Button
            style="@style/menuButton"
            android:text="@string/foodList"
            android:id="@+id/foodListButton"/>

        <Button
            style="@style/menuButton"
            android:text="[GO TO FOOD QUANTITY PICKER]"
            android:id="@+id/TEMPORARYBUTTON"/>
        </LinearLayout>


</RelativeLayout>
