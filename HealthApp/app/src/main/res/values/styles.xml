<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="menuButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:background">@color/backgroundLight</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="diaryRowTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="diaryRowTextView.title">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="diaryRowTextView.detail">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="diaryTotalTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">11pt</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="diaryTotalTextView.title">
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <style name="diaryTotalTextView.value">
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <style name="addEntryButton">
        <item name="android:background">@color/backgroundLight</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="newEntryView">
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="newEntryView.title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">11pt</item>
    </style>

    <style name="ListView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textSize">30sp</item>
    </style>
    
    <style name="registerProfileRowTitle">
        <item name="android:textSize">12pt</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="registerProfileRowEntryField">
        <item name="android:width">200dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    
    <style name="registerProfileRowRadioButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">10pt</item>
    </style>

    <style name="addFood">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="addFood.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">12pt</item>
    </style>

    <style name="addFood.Value">
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="addFood.Value.Numeric">
        <item name="android:inputType">number</item>
    </style>

    <style name="addFood.Unit">

    </style>

    <style name="addFood.Row">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/backgroundDark</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingLeft">8pt</item>
        <item name="android:paddingRight">8pt</item>
    </style>

    <style name="foodListRowTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="foodListRowTextView.title">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="foodListRowTextView.detail">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="diaryChangeDayButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/backgroundLight</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="registerProfileRowRadioButtonSmall">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">10pt</item>
    </style>

    <style name="calorieProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/calorieprogressbar</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>
</resources>
